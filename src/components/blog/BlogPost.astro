  }
  
  .blog-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
  }
  
  .blog-content ul,
  .blog-content ol {
    margin: 1rem 0;
    margin-left: 1.5rem;
  }
  
