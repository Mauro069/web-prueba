---
import '../styles/global.css';
import {
  getLocaleFromUrl,
  getAlternateLinks,
  createTranslator,
} from '../i18n/utils.js';
import { TRANSLATION_KEYS } from '../constants/index.js';
import Navbar from '../components/ui/navbar/Navbar.astro';
import Footer from '../components/ui/footer/Footer.astro';

const currentLocale = getLocaleFromUrl(Astro.url);
const t = createTranslator(currentLocale);
const alternateLinks = getAlternateLinks(Astro.url.pathname, currentLocale);

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Codescript',
  description = t(TRANSLATION_KEYS.WELCOME_DESCRIPTION),
} = Astro.props;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Exo:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Alternate Language Links -->
    {
      alternateLinks.map(({ locale, href }) => (
        <link
          rel="alternate"
          hreflang={locale}
          href={new URL(href, Astro.site || Astro.url.origin).href}
        />
      ))
    }

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content={currentLocale} />
  </head>
  <body>
    <div class="background-overlay"></div>
    <div class="content-wrapper">
      <!-- Header con navegaciÃ³n y selector de idioma -->
      <Navbar />
      <!-- Contenido principal -->
      <main>
        <slot />
      </main>
      <!-- Footer -->
      <Footer />
    </div>
  </body>

  <style>
    @import './Layout.css';
  </style>
</html>
